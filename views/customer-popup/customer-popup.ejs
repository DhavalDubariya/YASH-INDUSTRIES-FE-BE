<div class="modal fade" id="addDealModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
  aria-labelledby="addDealModal" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-centered">
    <div class="modal-content bg-body-highlight p-6">
      <div class="modal-header border-0 p-0 mb-2">
        <h3 id="customer-display-name" class="mb-0">Create Customer</h3><button class="btn btn-sm btn-phoenix-secondary" data-bs-dismiss="modal"
          aria-label="Close"><span class="fas fa-times text-danger"></span></button>
      </div>
      <form class="row g-3 needs-validation" novalidate="" id="customer-popup" >
        <input class="form-control" type="text" name="customer_id" id="customer_id" hidden>
        <div class="modal-body px-0">
          <div class="row g-4">
            <div class="col-lg-6">
              <div class="mb-4">
                <label class="text-body-highlight fw-bold mb-2" for="customer_name">Customer Name</label>
                <input class="form-control" type="text" name="customer_name" id="customer_name" placeholder="Enter customer Name"
                  required />
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please provide customer name.</div>
              </div>
              <div class="mb-4">
                <label class="text-body-highlight fw-bold mb-2" for="phone_number">Phone Number</label>
                <input class="form-control" type="tel" pattern="[0-9]{10}" placeholder="e.g.9998817524" name="phone_number" id="phone_number" placeholder="Enter phone number" required/>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please provide Phone Number.</div>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="mb-4"><label for="company_name" class="text-body-highlight fw-bold mb-2">Company</label>
                <input name="company_name" id="company_name" class="form-control" type="text" placeholder="Enter company name" />
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please provide Company Name.</div>
              </div>
              <div class="mb-4"><label class="text-body-highlight fw-bold mb-2" for="city">City</label>
                <input name="city" id="city" class="form-control"  type="text" placeholder="Enter city name" />
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please provide Phone Number.</div>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="mb-2">
                <label class="text-body-highlight fw-bold mb-2" for="address">Address</label>
                <textarea class="form-control" name="address" id="address" rows="3" placeholder="Enter Address"> </textarea>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please provide Phone Number.</div>
                <!-- <input class="form-control" type="text" placeholder="Enter city name" /> -->
              </div>
              <div>
              </div>
            </div>
            <div class="modal-footer border-0 px-0 pb-0"><button class="btn btn-link text-danger px-3 my-0"
                data-bs-dismiss="modal" aria-label="Close">Cancel</button>
                <button class="btn btn-primary my-0" id="customer-display-button" >Create</button></div>
          </div>
        </div>
      </form>
    </div>

    <script src="javascripts/customer.js" ></script>
