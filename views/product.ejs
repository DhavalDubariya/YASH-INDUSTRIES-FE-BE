<!DOCTYPE html>
<html data-navigation-type="default" data-navbar-horizontal-shape="default" lang="en-US" dir="ltr">
<meta http-equiv="content-type" content="text/html;charset=utf-8" /><!-- /Added by HTTrack -->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- ===============================================-->
    <!--    Document Title-->
    <!-- ===============================================-->
    <title>Phoenix</title>
    <%- include('beverages.ejs') %>
  </head>

  <body>
    <!-- ===============================================-->
    <!--    Main Content-->
    <!-- ===============================================-->
    <main class="main" id="top">
      <%- include('navbar.ejs') %>
      <div class="content">
        <nav class="mb-2" aria-label="breadcrumb">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/customer">Customer</a></li>
            <li class="breadcrumb-item active">Product</li>
          </ol>
        </nav>
        <div class="mb-9">
          <div class="row align-items-center justify-content-between g-3 mb-4">
            <div class="col-auto">
              <h2 id="product-page" class="mb-0">Create Product</h2>
            </div>
            <!-- <div class="col-auto">
              <div class="row g-3">
                <div class="col-auto"><button class="btn btn-phoenix-danger"><span class="fa-solid fa-trash-can me-2"></span>Delete</button></div>
                <div class="col-auto"><button class="btn btn-phoenix-success" id="update-customer" ><span class="fas fa-key me-2"></span>Edit</button></div>
              </div>
            </div> -->
          </div>
          <div class="row g-5">
            <div class="col-12">
              <div class="row g-3 g-xxl-0 h-100">
                <div class="col-12 col-md-12 col-xxl-12 mb-xxl-12">
                  <div>
                    <div>
                        <div class="row g-4">
                          <form id="product-form" class="needs-validation" novalidate="" >
                            <div class="col-lg-12">
                              <div class="mb-4">
                                <label class="text-body-highlight fw-bold mb-2" for="product_name">Product Name</label>
                                <input class="form-control" type="text" name="product_name" id="product_name" placeholder="Enter product name"
                                  required />
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please provide customer name.</div>
                              </div>
                              <div class="mb-4" >
                                <div class="row" >
                                  <div class="col-6" >
                                    <label class="text-body-highlight fw-bold mb-2" for="product_quantity">Product Quantity (Gm)</label>
                                    <input class="form-control" type="text" name="product_quantity" id="product_quantity" placeholder="Enter product quantity"
                                      required />
                                    <div class="valid-feedback">Looks good!</div>
                                    <div class="invalid-feedback">Please provide valid quantity.</div>
                                  </div>
                                  <div class="col-6" >
                                    <label class="text-body-highlight fw-bold mb-2" for="runner">Runner (Gm)</label>
                                    <input class="form-control" type="text" name="runner" id="runner" placeholder="Enter product runner"
                                      required />
                                    <div class="valid-feedback">Looks good!</div>
                                    <div class="invalid-feedback">Please provide valid quantity.</div>
                                  </div>
                                </div>
                              </div>
                              <div class="mb-4" >
                                <label class="text-body-highlight fw-bold mb-2" for="product_name">Material</label>        
                                <table class="table table-bordered">
                                  <thead>
                                    <tr>
                                      <th style="width:32%;" scope="col">Name</th>
                                      <th style="width:32%;" scope="col">Color</th>
                                      <th style="width:32%;" scope="col">Quantity (Kg)</th>
                                      <th style="width:4%; padding: 0.325rem !important; cursor: pointer; " id="add-material" scope="col">
                                        <span class="text-success" data-feather="plus-circle" style="height: 18px; width: 18px;"></span>
                                      </th>
                                    </tr>
                                  </thead>
                                  <tbody id="material" >
                                    <tr style="padding: 0px !important;" material-data-id="1">
                                      <td style="padding: 0px !important;">
                                        <input style="border-radius: 0px !important;" class="form-control" type="text" name="material_name" id="material_name" placeholder="Name"
                                          required />
                                        <div class="valid-feedback">Looks good!</div>
                                        <div class="invalid-feedback">Please provide material name.</div>
                                      </td>
                                      <td style="padding: 0px !important;">
                                        <input style="border-radius: 0px !important;" class="form-control" type="text" name="material_color" id="material_color" placeholder="Color"
                                          required />
                                        <div class="valid-feedback">Looks good!</div>
                                        <div class="invalid-feedback">Please provide color.</div>
                                      </td style="padding: 0px !important;">
                                      <td style="padding: 0px !important;">
                                        <input style="border-radius: 0px !important;" class="form-control" pattern="^[1-9]\d*$" type="number" name="material_qty" id="material_qty" placeholder="Quantity" required />
                                      <div class="valid-feedback">Looks good!</div>
                                      <div class="invalid-feedback">Please provide quantity.</div></td>
                                      <td style="padding: 0.325rem; cursor: pointer;" onclick="removeMaterial(1)">
                                        <div>
                                          <span class="text-danger" data-feather="minus-circle" style="height: 18px; width: 18px;"></span>
                                        </div>
                                      </td>
                                    </tr>
                                  </tbody>
                                </table>
                              </div>
                              </div>
                            </div>
                            
                            <div class="modal-footer border-0 px-0 pb-0">
                                <button class="btn btn-link text-danger px-3 my-0" data-bs-dismiss="modal" aria-label="Close">Cancel</button>
                                <button class="btn btn-primary my-0" id="customer-product" flag-create="true">Create</button>
                            </div>
                          </div>
                          <form>
                      
                    </div>
                  </div>
                </div>
              </div>
            </div>
            
          </div>
        </div>
        
      </div>
    </main><!-- ===============================================-->
    <!--    End of Main Content-->
    <!-- ===============================================-->
    <script src="/javascripts/product.js" ></script>
  </body>
</html>